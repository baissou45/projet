{% block title %}Soumettre un bien - {{ parent () }}{% endblock %}
{% block content %}
    <section class="probootstrap-slider flexslider2 page-inner">
    <div class="overlay"></div>
    <div class="probootstrap-wrap-banner">
      <div class="container">
        <div class="row">
          <div class="col-md-8">

            <div class="page-title probootstrap-animate">
              <div class="probootstrap-breadcrumbs">
                <a href="#">Accueil</a>
              </div>
              <h1>Soumettre un bien</h1>
            </div>

          </div>
        </div>
      </div>
    </div>
    <ul class="slides">
      <li style="background-image: url(front-end/img/architecture.jpg);"></li>
      <li style="background-image: url(front-end/img/architecture.jpg);"></li>
      <li style="background-image: url(front-end/img/architecture.jpg);"></li>
    </ul>
  </section>
        <!-- property area -->
        <div class="content-area submit-property" style="background-color: #FCFCFC;">&nbsp;
            <div class="container">
                <div class="clearfix" > 
                    <div class="wizard-container"> 

                        <div class="wizard-card ct-wizard-orange" id="wizardProperty">
                            <form action="" method="">                        
                                <div class="wizard-header">
                                    <h3>
                                        <b>Soumettez</b> VOTRE BIEN<br>
                                        <small>Il nous faut avoir quelques informations vous concernant et votre bien.</small>
                                    </h3>
                                </div>

                                <ul>
                                    <li><a href="#step1" data-toggle="tab">Etape 1 </a></li>
                                    <li><a href="#step2" data-toggle="tab">Etape 2 </a></li>
                                    <li><a href="#step3" data-toggle="tab">Etape 3 </a></li>
                                    <li><a href="#step4" data-toggle="tab">Soumettre le bien</a></li>
                                </ul>

                                <div class="tab-content">

                                    <div class="tab-pane" id="step1">
                                        <div class="row p-b-15  ">
                                            <h4 class="info-text"> Quelques informations vous concernant</h4>
                                            <div class="col-sm-4 col-sm-offset-1">
                                                <div class="picture-container">
                                                    <div class="picture">
                                                        <img src="assets/img/default-property.jpg" class="picture-src" id="wizardPicturePreview" title=""/>
                                                        <input type="file" id="wizard-picture">
                                                        <label for="wizard-picture">Entrer une image de vous (optionnel) </label>
                                                    </div> 
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Votre nom<small>(obligatoire)</small></label>
                                                    <input name="propertyname" type="text" class="form-control" placeholder="">
                                                </div>

                                                <div class="form-group">
                                                    <label>Votre prénom<small>(obligatoire)</small></label>
                                                    <input name="propertyprice" type="text" class="form-control" placeholder="">
                                                </div> 
                                                <div class="form-group">
                                                    <label>Telephone <small>(obligatoire)</small></label>
                                                    <input name="phone" type="text" class="form-control" placeholder="00229 ">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--  End step 1 -->

                                    <div class="tab-pane" id="step2">
                                        <h4 class="info-text"> Parler nous de votre bien</h4>
                                        <div class="row">
                                            <div class="col-sm-12"> 
                                                <div class="col-sm-12"> 
                                                    <div class="form-group">
                                                        <label>Ajouter une courte description de la propriété:</label>
                                                        <textarea name="discrition" class="form-control" ></textarea>
                                                    </div> 
                                                </div> 
                                            </div>

                                            <div class="col-sm-12">
                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Ville :</label>
                                                        <select id="lunchBegins" class="selectpicker show-tick form-control" data-live-search="true" data-live-search-style="begins" title="Selectionner la ville">
                                                            <option>Seoul</option>
                                                            <option>Paris</option>
                                                            <option>Casablanca</option>
                                                            <option>Tokyo</option>
                                                            <option>Marraekch</option>
                                                            <option>kyoto , shibua</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Quartier :</label>
                                                        <select id="lunchBegins" class="selectpicker show-tick form-control" data-live-search="true" data-live-search-style="begins" title="Selectionner le quartier" required="required">
                                                            <option>New york, CA</option>
                                                            <option>Paris</option>
                                                            <option>Casablanca</option>
                                                            <option>Tokyo</option>
                                                            <option>Marraekch</option>
                                                            <option>kyoto , shibua</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Type de la propriété:</label>
                                                        <select id="basic" class="selectpicker show-tick form-control" onclick="controle()" title="Si vous prorpiété est une parcelle ou tout autre type veuillez préciser">
                                                            <option > -Type- </option>
                                                            <option >Parcelle </option>
                                                            <option >Batis</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Statut de la propriété :</label>
                                                        <select id="statut" class="selectpicker show-tick form-control" title="Est t'il a vendre ou a louer ?">
                                                            <option> -Statut- </option>
                                                            <option>A vendre </option>
                                                            <option>A louer</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-12" id="step21">
                                                <div class="col-sm-3" id="superficieparcelle">
                                                        <div class="form-group">
                                                            <label>La superficie de la parcelle(en m2)</label>
                                                            <input id="inputsuperficieparcelle" name="superficieparcelle" type="text" class="form-control"placeholder="" onclick="controle">
                                                        </div>
                                                </div>
                                                <div class="col-sm-3" id="nbrlot">
                                                        <div class="form-group">
                                                            <label>Le nombre de lots</label>
                                                            <input id="inputnbrlot" name="superficieparcelle" type="text" class="form-control"placeholder="" title="Par exemple j'ai des chambres de type 1 chambre 1 salon et ceux de type 2 chambres 1 salon" onclick="controle">
                                                        </div>
                                                </div>
                                            </div>

                                            <div id="controleparcelle">
                                                <div class="col-sm-12 padding-top-15">                                                   
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            <label for="property-geo">Min bed :</label>
                                                            <input type="text" class="span2" value="" data-slider-min="0" 
                                                                   data-slider-max="600" data-slider-step="5" 
                                                                   data-slider-value="[250,450]" id="min-bed" ><br />
                                                            <b class="pull-left color">1</b> 
                                                            <b class="pull-right color">120</b>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">

                                                        <div class="form-group">
                                                            <label for="price-range">Min baths :</label>
                                                            <input type="text" class="span2" value="" data-slider-min="0" 
                                                                   data-slider-max="600" data-slider-step="5" 
                                                                   data-slider-value="[250,450]" id="min-baths" ><br />
                                                            <b class="pull-left color">1</b> 
                                                            <b class="pull-right color">120</b>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">

                                                        <div class="form-group">
                                                            <label for="property-geo">Property geo (m2) :</label>
                                                            <input type="text" class="span2" value="" data-slider-min="0" 
                                                                   data-slider-max="600" data-slider-step="5" 
                                                                   data-slider-value="[50,450]" id="property-geo" ><br />
                                                            <b class="pull-left color">40m</b> 
                                                            <b class="pull-right color">12000m</b>
                                                        </div>
                                                    </div>   
                                                </div>
                                                <div class="col-sm-12 padding-top-15">
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox"> Swimming Pool
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div> 
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox"> 2 Stories
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>                                                 
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox"> Emergency Exit
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>                                                 
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox"> Fire Place 
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div> 
                                                </div> 
                                                <div class="col-sm-12 padding-bottom-15">
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox"> Laundry Room
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox"> Jog Path
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox"> Ceilings
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox"> Dual Sinks
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <br>
                                        </div>
                                    </div>
                                    <!-- End step 2 -->

                                    <div class="tab-pane" id="step3">                                        
                                        <h4 class="info-text">Give us somme images and videos ? </h4>
                                        <div class="row">  
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="property-images">Chose Images :</label>
                                                    <input class="form-control" type="file" id="property-images">
                                                    <p class="help-block">Select multipel images for your property .</p>
                                                </div>
                                            </div>
                                            <div class="col-sm-6"> 
                                                <div class="form-group">
                                                    <label for="property-video">Property video :</label>
                                                    <input class="form-control" value="" placeholder="http://www.youtube.com, http://vimeo.com" name="property_video" type="text">
                                                </div> 

                                                <div class="form-group">
                                                    <input class="form-control" value="" placeholder="http://www.youtube.com, http://vimeo.com" name="property_video" type="text">
                                                </div>

                                                <div class="form-group">
                                                    <input class="form-control" value="" placeholder="http://www.youtube.com, http://vimeo.com" name="property_video" type="text">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--  End step 3 -->


                                    <div class="tab-pane" id="step4">                                        
                                        <h4 class="info-text"> Finished and submit </h4>
                                        <div class="row">  
                                            <div class="col-sm-12">
                                                <div class="">
                                                    <p>
                                                        <label><strong>Terms and Conditions</strong></label>
                                                        By accessing or using  GARO ESTATE services, such as 
                                                        posting your property advertisement with your personal 
                                                        information on our website you agree to the
                                                        collection, use and disclosure of your personal information 
                                                        in the legal proper manner
                                                    </p>

                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" /> <strong>Accept termes and conditions.</strong>
                                                        </label>
                                                    </div> 

                                                </div> 
                                            </div>
                                        </div>
                                    </div>
                                    <!--  End step 4 -->

                                </div>

                                <div class="wizard-footer">
                                    <div class="pull-right">
                                        <input type='button' style="background-color: green;" class='btn btn-next btn-primary' name='next' value='Suivant' />
                                        <input type='button' class='btn btn-finish btn-primary ' name='finish' value='Finish' />
                                    </div>

                                    <div class="pull-left">
                                        <input type='button' class='btn btn-previous btn-default' name='previous' value='Précédent' />
                                    </div>
                                    <div class="clearfix"></div>                                            
                                </div>  
                            </form>
                        </div>
                        <!-- End submit form -->
                    </div> 
                </div>
            </div>
        </div>
{% endblock %}
{% block script %}
    {{ parent () }}
    <script>
        document.getElementById('controleparcelle').style.display = 'none';
        document.getElementById('superficieparcelle').style.display = 'none';
        document.getElementById('nbrlot').style.display = 'none';
                
        function controle() {


            var typedebiens = document.getElementById('basic').value;


                if (typedebiens=="Parcelle")
                {
                    document.getElementById('superficieparcelle').style.display = 'block';
                    document.getElementById('nbrlot').style.display = 'none';
                }
                else if (typedebiens=="Batis") 
                {
                    document.getElementById('nbrlot').style.display = 'block';
                    document.getElementById('superficieparcelle').style.display = 'none';
                }
                        }
    </script>
